<html>

<head>

    <link rel="stylesheet" href="~/css/Style.css" />
</head>

<body>
    <div class="login">
        <h1>Login to Web App</h1>
        <span style="color: green;">username: admin</span>
        <span style="color: green;">password: admin@123</span>

        <form method="post" enctype="multipart/form-data" asp-controller="Login" asp-action="Index">
            <p><input type="text" name="username" value="" placeholder="Username or Email" required></p>
            <p><input type="password" name="password" value="" placeholder="Password" required></p>
            <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Remember me on this computer
                </label>
            </p>
            <p class="submit"><input type="submit" name="commit" value="Login"></p>
            <hr />
            <span style="color: red;">@ViewBag.message</span>
        </form>
    </div>
</body>

</html>