@using primetechmvc.DTO
@model IEnumerable<StudentDto>

@{
    ViewBag.Title = "Students";
}

<div class="d-flex align-content-between">
    <b>Student List</b>
    <a href='@Url.Action("Assign","Student")' class="btn btn-success text-white"><i class="fas fa-random"></i>Register</a>
</div>


<table class="pt-3 table table-bordered table-responsive table-hover">
    <tr>
        <th>Name</th>
        <th>Roll</th>
        <th>Action</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Roll</td>
            @* <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#details">Details</button></td> *@
            <td>
                <a href='@Url.Action("Details","Student",new {StudentId=student.Id})' class="btn btn-success text-white"><i class="fas fa-random"></i>Details</a>
            </td>
        </tr>
    }
</table>


